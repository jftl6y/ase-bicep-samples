{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "app_name": {
            "type": "string",
            "metadata": {
                "description": "name of the appservice app"
            }
        },
        "ase_name": {
            "type": "string",
            "metadata": {
                "description": "name of the appservice environment"
            }
        },
        "virtualNetworks_ase_vnet_externalid": {
            "type": "String",
            "metadata": {
                "description": "The external id of the virtual network to use for the appservice environment"
            }
        }
    },
    "variables": {
        "app_service_plan_name": "concat{parameters('app_name'), '-asp'}"
    },
    "resources": [
        {
            "type": "Microsoft.Web/hostingEnvironments",
            "apiVersion": "2022-09-01",
            "name": "[parameters('ase_name')]",
            "location": "[resourceGroup().location]",
            "kind": "ASEV3",
            "properties": {
                "virtualNetwork": {
                    "id": "[concat(parameters('virtualNetworks_ase_vnet_externalid'), '/subnets/ase-subnet')]"
                },
                "internalLoadBalancingMode": "Web, Publishing",
                "multiSize": "Standard_D2d_v4",
                "ipsslAddressCount": 0,
                "dnsSuffix": "[concat(parameters('ase_name'), '.appserviceenvironment.us')]",
                "frontEndScaleFactor": 15,
                "upgradePreference": "None",
                "dedicatedHostCount": 0,
                "zoneRedundant": false,
                "networkingConfiguration": {}
            }
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "dependsOn": [
                "[resourceId('Microsoft.Web/hostingEnvironments', parameters('ase_name'))]"
            ],
            "apiVersion": "2022-09-01",
            "name": "[variables('app_service_plan_name')]",
            "location": "USGov Virginia",
            "sku": {
                "name": "I1v2",
                "tier": "IsolatedV2",
                "size": "I1v2",
                "family": "Iv2",
                "capacity": 1
            },
            "kind": "app",
            "properties": {
                "hostingEnvironmentProfile": {
                    "id": "[resourceId('Microsoft.Web/hostingEnvironments', parameters('ase_name'))]"
                },
                "perSiteScaling": false,
                "elasticScaleEnabled": false,
                "maximumElasticWorkerCount": 1,
                "isSpot": false,
                "reserved": false,
                "isXenon": false,
                "hyperV": false,
                "targetWorkerCount": 0,
                "targetWorkerSizeId": 0,
                "zoneRedundant": false
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2022-09-01",
            "name": "[parameters('app_name')]",
            "location": "USGov Virginia",
            "kind": "app",
            "properties": {
                "enabled": true,
                "serverFarmId": "[resourceId('Microsoft.Web/hostingEnvironments', parameters('ase_name'))]",
                "reserved": false,
                "isXenon": false,
                "hyperV": false,
                "vnetRouteAllEnabled": false,
                "vnetImagePullEnabled": false,
                "vnetContentShareEnabled": true,
                "siteConfig": {
                    "numberOfWorkers": 1,
                    "acrUseManagedIdentityCreds": false,
                    "alwaysOn": true,
                    "http20Enabled": false,
                    "functionAppScaleLimit": 0,
                    "minimumElasticInstanceCount": 0
                },
                "scmSiteAlsoStopped": false,
                "hostingEnvironmentProfile": {
                    "id": "[resourceId('Microsoft.Web/hostingEnvironments', parameters('ase_name'))]"
                },
                "clientAffinityEnabled": true,
                "clientCertEnabled": false,
                "clientCertMode": "Required",
                "hostNamesDisabled": false,
                "containerSize": 0,
                "dailyMemoryTimeQuota": 0,
                "httpsOnly": true,
                "redundancyMode": "None",
                "storageAccountRequired": false
            }
        }
    ]
}